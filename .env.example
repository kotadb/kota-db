# KotaDB HTTP REST API Server Configuration

# HTTP Server Settings
KOTADB_HTTP_PORT=8080
KOTADB_HTTP_HOST=0.0.0.0

# Database Settings
KOTADB_DATA_DIR=/data
KOTADB_CACHE_SIZE=1000
DATABASE_URL=postgresql://kotadb:development@localhost:5432/kotadb_test?statement_cache_size=0
SQLX_DISABLE_STATEMENT_CACHE=true

# Logging Settings
RUST_LOG=info
RUST_BACKTRACE=0

# Development Settings (for docker-compose.dev.yml)
USER_ID=1000
GROUP_ID=1000
KOTADB_HTTP_PORT=8080
KOTADB_HTTP_HOST=0.0.0.0

# When running with docker-compose.dev.yml, DATABASE_URL will default to:
# postgresql://kotadb:development@postgres-dev:5432/kotadb_test

# Optional: Nginx Proxy Settings (when using --profile with-proxy)
NGINX_PORT=80
NGINX_SSL_PORT=443

# MCP (Docker) local overrides
# Port exposed on localhost for the MCP JSON-RPC server
MCP_PORT=8484
# Host directory to persist MCP server data (bind-mount)
KOTADB_DATA_DIR_HOST=./kotadb-data
# Optional: path to MCP config on host (bind-mounted read-only)
KOTADB_MCP_CONFIG_HOST=./docker/mcp/kotadb-mcp.toml
